{
  "name": "@alejandrochaves/devflow-cli",
  "version": "1.7.0",
  "description": "Interactive CLI for branch creation, conventional commits, and PR management",
  "type": "module",
  "bin": {
    "devflow": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "predev": "npm run build && npm link",
    "dev": "trap 'npm unlink 2>/dev/null' EXIT && tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "demo:coverage": "node --import tsx scripts/demo-coverage.ts",
    "demo:validate": "./scripts/validate-tapes.sh",
    "prepublishOnly": "npm run build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "git",
    "commits",
    "conventional-commits",
    "branch",
    "pull-request"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alejandrochvs/devflow-cli.git"
  },
  "bugs": {
    "url": "https://github.com/alejandrochvs/devflow-cli/issues"
  },
  "homepage": "https://github.com/alejandrochvs/devflow-cli#readme",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.12.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  }
}
