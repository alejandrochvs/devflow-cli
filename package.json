{
  "name": "@alejandrochaves/devflow-cli",
  "version": "0.4.0",
  "description": "Interactive CLI for branch creation, conventional commits, and PR management",
  "type": "module",
  "bin": {
    "devflow": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "publish:public": "npm publish --access=public",
    "prepublishOnly": "npm run build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "cli",
    "git",
    "commits",
    "conventional-commits",
    "branch",
    "pull-request"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alejandrochvs/devflow-cli.git"
  },
  "bugs": {
    "url": "https://github.com/alejandrochvs/devflow-cli/issues"
  },
  "homepage": "https://github.com/alejandrochvs/devflow-cli#readme",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.12.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "~5.9.2",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  }
}
